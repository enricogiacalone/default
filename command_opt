
#!/bin/bash
# Bash Menu Script Example

parent_path=$( cd "$(dirname "${BASH_SOURCE[0]}")" ; pwd -P )

cd "$parent_path/"

PS3='Please enter your choice: '
options=("Bash" "VsCode" "Install" "Purge" "Server" "ios-dev" "android-dev" "build-android-dev" "Open apk folder")
select opt in "${options[@]}"
do
    case $opt in
        "Bash")
            echo "you chose choice $REPLY which is $opt"
            bash
            ;;
        "VsCode")
            echo "you chose choice $REPLY which is $opt"
            code .
            ;;
        "Install")
            echo "you chose choice $REPLY which is $opt"
            npm install
            ;;
        "Purge")
            echo "you chose choice $REPLY which is $opt"
            npm run purge
            ;;
        "Server")
            echo "you chose choice $REPLY which is $opt"
            npm start
            ;;
        "ios-dev")
            echo "you chose choice $REPLY which is $opt"
            npm run ios-dev
            ;;
        "android-dev")
            echo "you chose choice $REPLY which is $opt"
            npm run android-dev
            ;;
        "build-android-dev")
            echo "you chose choice $REPLY which is $opt"
            npm run build-android-dev
            ;;
        "Open apk folder")
            echo "you chose choice $REPLY which is $opt"
            cd android/app/build/outputs/apk/release && open . && cd "$parent_path"
            ;;
        *) echo "invalid option $REPLY";;
    esac
done
